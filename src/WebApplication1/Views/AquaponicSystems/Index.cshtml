@model IList<Auto.Aquaponics.AquaponicSystem>

@{
    ViewData["Title"] = "Aquaponic Systems";
}
        <h2>Systems</h2>
       
<table class="table table-hover">
    <tbody>
    @foreach (var system in Model)
    {
        <tr>
            <td>
                @system.Name
            </td>
            <td class="input-group-btn">
                <button type="button" class="btn btn-default">Add reading</button>
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Action <span class="caret"></span></button>
                <ul class="dropdown-menu dropdown-menu-right">
                    <li>
                        <a href="#">Edit system</a>
                    </li>
                    <li>
                        <a href="#">Delete system</a>
                    </li>
                </ul>
            </td>
        </tr>
    }
    </tbody>
</table>

